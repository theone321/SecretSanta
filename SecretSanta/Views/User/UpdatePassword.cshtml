@model SecretSanta.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Update Password";
}
<h2>UpdatePassword</h2>
<hr />
<div>
    <form asp-action="UpdatePassword" asp-controller="User">
        <div>
            <label asp-for="@Model.CurrentPassword" style="width:150px">Current Password:</label>
            <input asp-for="@Model.CurrentPassword" />
        </div>
        <div>
            <label asp-for="@Model.NewPassword" style="width:150px">New Password:</label>
            <input asp-for="@Model.NewPassword" />
        </div>
        <div>
            <label asp-for="@Model.VerifyPassword" style="width:150px">Confirm Password:</label>
            <input asp-for="@Model.VerifyPassword" />
        </div>
        <input hidden asp-for="@Model.EventId" />
        <input type="submit" class="btn btn-default" value="Update Password" />
    </form>

    @if (Model.EventId > 0) {
        <a asp-controller="Match" asp-action="GetMatch" asp-route-eventId="@Model.EventId">Back</a>
    }
    else {
        <a asp-controller="Event" asp-action="ChooseEvent">Back</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}